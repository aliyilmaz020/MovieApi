
@{
    ViewData["Title"] = "Filmler";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="movie-content">
    <div class="page-header">
        <h2><i class="fas fa-film"></i> Film Yönetimi</h2>
        <button class="btn btn-success" onclick="openModal()">
            <i class="fas fa-plus" onclick="saveFilm()"></i> Yeni Film Ekle
        </button>
    </div>

    <!-- Stats -->
    <div class="stats-row">
        <div class="stat-card">
            <div class="stat-label">Toplam Film</div>
            <div class="stat-value">156</div>
        </div>
        <div class="stat-card" style="border-color: #1cc88a;">
            <div class="stat-label">Aktif Filmler</div>
            <div class="stat-value">142</div>
        </div>
        <div class="stat-card" style="border-color: #f6c23e;">
            <div class="stat-label">Yakında</div>
            <div class="stat-value">14</div>
        </div>
        <div class="stat-card" style="border-color: #e74a3b;">
            <div class="stat-label">Ortalama Puan</div>
            <div class="stat-value">7.8</div>
        </div>
    </div>

    <!-- Search and Filter -->
    <div class="search-filter-bar">
        <div class="search-box">
            <div class="form-group">
                <label>Film Ara</label>
                <input type="text" class="form-control" placeholder="Film adı..." id="searchInput">
            </div>
            <div class="form-group">
                <label>Kategori</label>
                <select class="form-control" id="categoryFilter">
                    <option value="">Tümü</option>
                    <option value="aksiyon">Aksiyon</option>
                    <option value="dram">Dram</option>
                    <option value="komedi">Komedi</option>
                    <option value="korku">Korku</option>
                    <option value="bilimkurgu">Bilim Kurgu</option>
                </select>
            </div>
            <div class="form-group">
                <label>Durum</label>
                <select class="form-control" id="statusFilter">
                    <option value="">Tümü</option>
                    <option value="aktif">Aktif</option>
                    <option value="yakinda">Yakında</option>
                    <option value="arsiv">Arşiv</option>
                </select>
            </div>
            <button class="btn btn-primary" onclick="filterFilms()">
                <i class="fas fa-search"></i> Ara
            </button>
        </div>
    </div>

    <!-- Films Table -->
    @await Component.InvokeAsync("_AdminMovieListComponentPartial")
    <!-- Modals -->
    @await Component.InvokeAsync("_AdminMovieModalsComponentPartial")



</div>
@section Scripts{
    <script src="~/js/movie.js"></script>
}
@section Styles{
    <link href="~/css/movie.css" rel="stylesheet" />
}

