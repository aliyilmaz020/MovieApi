<!-- Add/Edit Modal -->
<div class="modal" id="filmModal">
    <div class="modal-content">
        <div class="modal-header">
            <h3 id="modalTitle">Yeni Film Ekle</h3>
            <button class="close-btn" onclick="closeModal()">&times;</button>
        </div>
        <div class="modal-body">
            <div class="form-group">
                <label>Film Adı *</label>
                <input type="text" class="form-control" id="filmTitle" placeholder="Film adını girin">
            </div>
            <div class="form-group">
                <label>Yıl *</label>
                <input type="number" class="form-control" id="filmCreatedYear" placeholder="2024">
            </div>
            <div class="form-group">
                <label>Süre (dakika) *</label>
                <input type="number" class="form-control" id="filmDuration" placeholder="120">
            </div>
            <div class="form-group">
                <label>IMDB Puanı</label>
                <input type="text" class="form-control" id="filmRating" placeholder="8,5">
            </div>
            <div class="form-group">
                <label>Poster URL</label>
                <input type="text" class="form-control" id="filmCoverImageUrl" placeholder="https://...">
            </div>
            <div class="form-group">
                <label>Yayınlanma Tarihi</label>
                <input type="datetime-local" class="form-control" id="filmReleaseDate">
            </div>
            <div class="form-group">
                <label>Açıklama</label>
                <textarea class="form-control" id="filmDescription" rows="3" placeholder="Film hakkında kısa açıklama..."></textarea>
            </div>
        </div>
        <div class="modal-footer">
            <button class="btn btn-danger" onclick="closeModal()">İptal</button>
            <button class="btn btn-success" id="btnSaveOrEdit" onclick="saveFilm()"></button>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal delete-modal" id="deleteModal">
    <div class="modal-content">
        <div class="modal-header">
            <h3>Film Sil</h3>
            <button class="close-btn" onclick="closeDeleteModal()">&times;</button>
        </div>
        <div class="delete-modal-body">
            <div class="delete-icon">
                <i class="fas fa-exclamation-triangle"></i>
            </div>
            <p>Bu filmi silmek istediğinizden emin misiniz?</p>
            <p class="film-name" id="deleteFilmName"></p>
            <p style="font-size: 14px; color: #858796;">Bu işlem geri alınamaz!</p>
        </div>
        <div class="modal-footer">
            <button class="btn btn-primary" onclick="closeDeleteModal()">İptal</button>
            <button class="btn btn-danger" onclick="confirmDelete()">
                <i class="fas fa-trash"></i> Sil
            </button>
        </div>
    </div>
</div>