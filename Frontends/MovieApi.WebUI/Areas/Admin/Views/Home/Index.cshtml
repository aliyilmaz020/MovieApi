
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Dashboard";
}

<div class="content-area">
    <h2 style="margin-bottom: 20px;">Hoş Geldiniz</h2>

    <!-- Dashboard Cards -->
    <div class="dashboard-cards">
        <div class="card">
            <div class="card-icon bg-primary text-white">
                <i class="fas fa-users"></i>
            </div>
            <div class="card-title">Toplam Kullanıcı</div>
            <div class="card-value">1,234</div>
        </div>
        <div class="card">
            <div class="card-icon bg-success text-white">
                <i class="fas fa-shopping-cart"></i>
            </div>
            <div class="card-title">Toplam Sipariş</div>
            <div class="card-value">567</div>
        </div>
        <div class="card">
            <div class="card-icon bg-warning text-white">
                <i class="fas fa-box"></i>
            </div>
            <div class="card-title">Ürün Sayısı</div>
            <div class="card-value">89</div>
        </div>
        <div class="card">
            <div class="card-icon bg-info text-white">
                <i class="fas fa-chart-line"></i>
            </div>
            <div class="card-title">Gelir</div>
            <div class="card-value">₺45,678</div>
        </div>
    </div>

    <!-- Additional Content Area -->
    <div class="card">
        <h4 style="margin-bottom: 15px;">Son Aktiviteler</h4>
        <p>Buraya içerik ekleyebilirsiniz...</p>
    </div>
</div>